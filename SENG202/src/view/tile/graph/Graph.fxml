<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.chart.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<StackPane prefHeight="500.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.tile.graph.GraphController">
   <children>
      <GridPane hgap="10.0" vgap="10.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS" />
          <RowConstraints maxHeight="40.0" minHeight="40.0" prefHeight="40.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <StackPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </StackPane.margin>
         <children>
            <LineChart>
              <xAxis>
                <CategoryAxis side="BOTTOM" />
              </xAxis>
              <yAxis>
                <NumberAxis side="LEFT" />
              </yAxis>
            </LineChart>
            <GridPane stylesheets="@button_graph.css" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER">
              <columnConstraints>
                  <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <GridPane.margin>
                  <Insets />
               </GridPane.margin>
               <children>
                  <ToggleButton mnemonicParsing="false" prefHeight="40.0" prefWidth="110.0" styleClass="ToggleButton" text="Heart Rate">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </ToggleButton>
                  <ToggleButton mnemonicParsing="false" prefHeight="40.0" prefWidth="110.0" styleClass="ToggleButton" text="Stress" GridPane.columnIndex="5">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </ToggleButton>
                  <ToggleButton mnemonicParsing="false" prefHeight="40.0" prefWidth="110.0" styleClass="ToggleButton" text="Calories" GridPane.columnIndex="3">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </ToggleButton>
                  <ToggleButton mnemonicParsing="false" prefHeight="40.0" prefWidth="110.0" styleClass="ToggleButton" text="Speed" GridPane.columnIndex="1">
                     <font>
                        <Font size="17.0" />
                     </font>
                  </ToggleButton>
                  <ToggleButton mnemonicParsing="false" prefHeight="40.0" prefWidth="110.0" styleClass="ToggleButton" text="Distance" GridPane.columnIndex="2">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </ToggleButton>
                  <ToggleButton mnemonicParsing="false" prefHeight="40.0" prefWidth="110.0" styleClass="ToggleButton" text="Altitude" GridPane.columnIndex="4">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </ToggleButton>
               </children>
            </GridPane>
         </children>
      </GridPane>
   </children>
</StackPane>
